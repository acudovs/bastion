write_files:
  - path: /etc/gdm/custom.conf
    content: |
        [daemon]
        AutomaticLoginEnable=True
        AutomaticLogin={{ vm.user.name }}

  - path: {{ vm.user.home }}/.local/bin/gnome-setup.sh
    owner: {{ vm.user.name }}
    permissions: '0755'
    content: |
        #!/usr/bin/bash
        gnome-extensions enable top-icons@gnome-shell-extensions.gcampax.github.com
        gnome-extensions enable window-list@gnome-shell-extensions.gcampax.github.com
        gsettings get org.gnome.desktop.interface font-antialiasing rgba
        gsettings set org.gnome.desktop.screensaver lock-enabled false
        gsettings set org.gnome.desktop.session idle-delay 0
        gsettings set org.gnome.desktop.wm.preferences button-layout appmenu:minimize,maximize,close

  - path: {{ vm.user.home }}/.config/autostart/gnome-setup.desktop
    owner: {{ vm.user.name }}
    content: |
        [Desktop Entry]
        Type=Application
        Name=GNOME Setup
        Exec={{ vm.user.home }}/.local/bin/gnome-setup.sh

  - path: /etc/NetworkManager/dispatcher.d/globalprotect
    permissions: '0755'
    content: |
        #!/usr/bin/bash
        case "$1:$2" in
            gpd0:up) cp /opt/paloaltonetworks/globalprotect/network/config/resolv.conf /etc/resolv.conf ;;
            gpd0:down) cp /run/NetworkManager/resolv.conf /etc/resolv.conf ;;
        esac

  - path: /etc/dnsmasq.conf
    content: |
        interface=eth0
        bind-interfaces

  - path: /etc/systemd/system/dnsmasq.service.d/override.conf
    content: |
        [Unit]
        Wants=network-online.target
        After=network-online.target

  - path: /etc/ssl/certs/6fa5da56.0
    content: |
